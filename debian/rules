#!/usr/bin/make -f

build: build-stamp
build-stamp:
	touch $@
	scons
	touch $@

clean:
	dh_testdir
	dh_testroot
	scons -c
	rm -f *-stamp
	rm -rf dist build
	rm backends.txt
	dh_clean

install: build install-prereq install-shmwrap
install-prereq:
	dh_testdir
	dh_testroot
	dh_clean -k

install-shmwrap:
	dh_installdirs
	dh_install

binary-indep:

binary-arch: build install
	dh_testdir -a
	dh_testroot -a
#	dh_installdocs -a
	dh_installdirs -a
	dh_installexamples  -a
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch


.PHONY: build clean binary-indep binary-arch binary install configure
